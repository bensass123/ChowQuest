<!-- HTML Code for User Profile -->
<!DOCTYPE html>
<html lang="en">
   <head>
       <meta charset="utf-8">
       <meta http-equiv="X-UA-Compatible" content="IE=edge">
       <meta name="viewport" content="width=device-width, initial-scale=1">
       <title>My Profile</title>
       <!-- Bootstrap CSS -->
       <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
       <link href="/stylesheets/style.css" rel="stylesheet">
       <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
       <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
       <!--[if lt IE 9]>
           <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
           <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
       <![endif]-->
   </head>
<body>
    <video id="my-video" class="video" loop="loop" muted="" width="300" height="150">
        <source src="../public/vid/walking.mp4" type="video/mp4" />
    </video>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class='nav-heart glyphicon glyphicon-cutlery'></span><span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><a href="/view">Home</a></li>
                    <li><a href="/profile">Profile Settings</a></li>
                    <li><a href="/logout">Logout</a></li>
                  </ul>
                </li>
            </ul>
        </div>
    </nav>
<div class="container">
   <div class="col-md-12">
    <div class="jumbotron">
    <!-- This set's the Jumbotrons header. -->
       <div class="page-header">
        {{#each user}}
         <h1>{{this.username}}</h1>
       </div>
     
   <!-- Other Information. -->
     <h2>First Name:</h2>
     <p>{{this.firstName}}</p>
     <h2>Last Name:</h2>
     <p>{{this.lastName}}</p>
     <h2>Email:</h2>
     <p>{{this.email}}</p>
     <h2>Phone:</h2>
     <a href="tel:{{this.phone}}"><span class="glyphicon glyphicon-phone glyphicon-align-left" aria-hidden="true"></span></a>
    {{/each}}
    </div>
       <!-- jQuery -->
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>      
       <!-- Bootstrap JavaScript -->
       <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>